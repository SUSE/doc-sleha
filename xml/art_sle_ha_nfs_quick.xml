  <?suse-quickstart version="1" color="suse" columns="no"?>
  <title>Highly Available NFS Storage with DRBD and Pacemaker</title>
  <subtitle><productname>&productname; 11</productname></subtitle>
  <articleinfo>
    <productname>&sle; &hasi; </productname>
    <productnumber>11</productnumber>
    <authorgroup>
