  <varlistentry>
   <term>Cluster resources</term>
   <listitem>
    <para>Primitives: no prefix</para>
    <para>Groups: prefix <literal>g-</literal></para>
    <para>Clones: prefix <literal>cl-</literal></para>
    <para>Promotable Clones: prefix <literal>ms-</literal></para>
   </listitem>
  </varlistentry>
  <varlistentry>
   <term>Constraints</term>
   <listitem>
    <para>Order constraints: prefix <literal>o-</literal></para>
    <para>Location constraints: prefix <literal>loc-</literal></para>
    <para>Colocation constraints: prefix <literal>col-</literal></para>
   </listitem>
  </varlistentry>
 </variablelist>
